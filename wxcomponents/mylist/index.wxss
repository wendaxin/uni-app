.list {
	background: #F3F4F5;
	padding: 10rpx;
	padding-bottom: 0;
	display: flex;
	flex-flow: row wrap;
	justify-content: space-between;
}

.item {
	background: #FFFFFF;
	display: flex;
	flex-flow: column nowrap;
	width: 360rpx;
	height: 600rpx;
	margin-bottom: 10rpx;
	position: relative;
}

.price {
	padding-left: 10rpx;
	display: flex;
	flex-flow: row nowrap;
	align-items: baseline;
}

.bold {
	line-height: 60rpx;
	font-size: 28rpx;
	font-weight: 500;
	padding-right: 10rpx;
}

.through {
	padding-right: 10rpx;
	color: #98989F;
	text-decoration: line-through;
	font-size: 22rpx;
}

.discount {
	font-size: 22rpx;
	color: #98989F;
}

.img {
	width: 100%;
	height: 440rpx;
}

.text {
	padding: 0 10rpx;
	font-size: 24rpx;
	color: #5A5E66;
	line-height: 30rpx;
}

.layer{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: transparent;
}