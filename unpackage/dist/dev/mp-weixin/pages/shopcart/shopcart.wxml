<mybody title="购物车" data-com-type="wx" bind:__l="__l" vue-slots="{{['default']}}"><view class="top">{{"配送至"+region}}</view><view hidden="{{!(hascar)}}" class="car"><image class="img" src="../../static/car.jpg" mode></image><view class="text">购物车空空如也</view><view data-event-opts="{{[['tap',[['rouetr',['$event']]]]]}}" class="btn" bindtap="__e">继续逛逛</view></view><view hidden="{{!(hasshop)}}"><view class="list _ul"><block wx:for="{{shop}}" wx:for-item="i" wx:for-index="index" wx:key="index"><view class="it _li"><image class="img" src="{{i.img}}" mode="widthFix"></image><view class="left"><view class="big">{{i.text}}</view><view class="btn"><view data-event-opts="{{[['tap',[['fac',['$0','$1'],[[['shop','',index,'id']],[['shop','',index,'num']]]]]]]}}" class="l" bindtap="__e">-</view><view class="center">{{i.num}}</view><view data-event-opts="{{[['tap',[['march',['$0'],[[['shop','',index,'id']]]]]]]}}" class="r" bindtap="__e">+</view></view></view><view class="right"><text class="money">{{"￥"+i.price_1}}</text><view data-event-opts="{{[['tap',[['changeMask',['$0'],[[['shop','',index,'id']]]]]]]}}" class="del" bindtap="__e">x</view></view></view></block></view><view class="margin"></view><view class="bottom"><view class="text">总金额:<text class="red">{{"￥"+total}}</text></view><view data-event-opts="{{[['tap',[['tishi',['$event']]]]]}}" class="btn" bindtap="__e">结算</view></view><view hidden="{{!(showMask)}}"><view class="mask"></view><view class="pop"><view class="top">确定要删除么</view><view data-event-opts="{{[['tap',[['hideMask',['$event']]]]]}}" class="left" bindtap="__e">先留着</view><view data-event-opts="{{[['tap',[['delshow',['$event']]]]]}}" class="right" bindtap="__e">删除</view></view></view></view></mybody>